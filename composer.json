{
  "config": {
    "optimize-autoloader": true,
    "bin-dir": "vendor/bin",
    "process-timeout": 600
  },
  "require": {
    "php": "7.4.*",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-intl": "*",
    "psr/log": "^1.0",
    "monolog/monolog": "1.*",
    "mesilov/bitrix24-php-sdk": "2.x-dev",
    "symfony/http-foundation": "5.*",
    "symfony/http-client": "5.*",
    "symfony/console": "5.*"
  },
  "require-dev": {
    "phpstan/phpstan": "0.12.48",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "9.5.*"
  },
  "autoload": {
    "psr-4": {
      "Rarus\\Interns\\BonusServer\\": "src/"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "scripts": {
    "test": [
      "phpunit --colors=always --verbose"
    ]
  }
}